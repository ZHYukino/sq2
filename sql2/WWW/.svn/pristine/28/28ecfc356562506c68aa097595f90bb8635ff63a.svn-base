//删除提醒
function doremindList(str, method) {

    switch (method) {
        case 1:
            toastr.success(str);
            break;
        case 2:
            toastr.info(str);
            break;
        case 3:
            toastr.warning(str);
            break;
        case 4:
            toastr.error(str);
            break;
    }    
    
    
}

//提醒
function doremind(str, method, target, url) {

  switch (method) {
      case 1:
          toastr.success(str);
          break;
      case 2:
          toastr.info(str);
          break;
      case 3:
          toastr.warning(str);
          break;
      case 4:
          toastr.error(str);
          break;
  }

  $("iframe[data-id='" + target + "']").attr("src", url);
}

//警示
function msgwarning(str, method, target, url) {

    switch (method) {
        case 1:
            toastr.success(str);
            break;
        case 2:
            toastr.info(str);
            break;
        case 3:
            toastr.warning(str);
            break;
        case 4:
            toastr.error(str);
            break;
    }

    $("iframe[data-id='" + target + "']").attr("src", url);
}

