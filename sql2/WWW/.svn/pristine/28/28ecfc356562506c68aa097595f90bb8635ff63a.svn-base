//后台-删除列表数据
function reallyDelList(u,d) {
    if (!confirm(msg_confirm_del)) {
        return false
    } else {
    	$.ajax({
			type: "GET",
			url : u + "?id=" + d + "&dc=" + new Date().getTime() + "",
			//data:{},
			dataType: "json",
			success: function(data){
				if(data.code==1){					
					parent.doremindList(msg_successdel,2);	
					$('#tb_show').bootstrapTable(('refresh'));
				}
             },
 			error: function(json){}
		});
    }
}

