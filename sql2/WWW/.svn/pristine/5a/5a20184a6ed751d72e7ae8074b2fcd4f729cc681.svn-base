<%
	if itype = 4 then
		ssql4 = "insert into UserInfo (UserAcc,UserPass,UserName,DT,Enable) values ('"& Request("q1") & "','" & Request("q3") & "','" & Request("q2") & "',GETDATE()," &  Request("q4") & ")"
		err.clear
		On Error Resume Next 
		Conn.Execute(ssql4)
		if err.number<>0 then
			response.write err.description 
			err.clear
